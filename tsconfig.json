{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/hooks": ["./src/hooks/index.ts"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/components/ui/*": ["./src/components/ui/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/contexts/types/*": ["./src/contexts/types/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/utils/services/*": ["./src/utils/services/*"],
      "@/utils/config/*": ["./src/utils/config/*"],
      "@/utils/types/*": ["./src/utils/types/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
